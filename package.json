{
  "name": "recordbook",
  "version": "1.0.0",
  "description": "A MERN stack app for users to record gas and maintenance for vehicles",
  "main": "server.js",
  "scripts": {
    "start": "if-env NODE_ENV=production && npm run start:prod || npm run start:dev",
    "start:prod": "node server.js",
    "start:dev": "concurrently \"nodemon --ignore 'client/*'\" \"npm run client\"",
    "client": "cd client && npm run start",
    "seed": "node scripts/seedDB.js",
    "install": "cd client && npm install",
    "build": "cd client && npm run build",
    "heroku-postbuild": "npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/AJFree458/recordbook.git"
  },
  "keywords": [
    "recordbook",
    "mern",
    "vehicles"
  ],
  "author": "Arthur Freeman",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/AJFree458/recordbook/issues"
  },
  "homepage": "https://github.com/AJFree458/recordbook#readme",
  "devDependencies": {
    "concurrently": "^6.4.0",
    "nodemon": "^2.0.15"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "if-env": "^1.0.4",
    "mongoose": "^6.0.13"
  }
}
